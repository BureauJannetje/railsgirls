<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-sm-4">
        <%= link_to idea do %>
          <%= image_tag idea.picture_url, width: '200px' , height: '200px' ,
            style:"object-fit:cover;" if idea.picture.present? %>
            <% end %>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>
